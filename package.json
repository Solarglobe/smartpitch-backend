{
  "name": "backend",
  "version": "1.4.0",
  "description": "SmartPitch Solarglobe backend (API /api/calculate + validation AJV)",
  "main": "server.js",
  "license": "ISC",
  "author": "",
  "keywords": [],
  "scripts": {
    "start": "node server.js",
    "test": "node scripts/test-calc.js",
    "test:calc": "node scripts/test-calc.js",
    "test:calc:remote": "cross-env CALC_URL=https://crm.solarglobe.fr/api/calculate node scripts/test-calc.js",
    "snapshot": "node scripts/snapshot-response.js",
    "quality": "node scripts/quality-check.js",
    "ci": "start-server-and-test \"node server.js\" http://localhost:3000 \"npm run quality\"",
    "postdeploy": "npm run snapshot && git add -f tests/reponse-live-*.json && git commit -m \"auto: update live snapshot\" || echo No\\ changes\\ to\\ commit",
    "release": "semantic-release",
    "bump:minor": "cross-env SKIP_PRECOMMIT=1 npm version minor -m \"chore: bump version to %s\" && git push && git push origin --tags",
    "prepare": "husky"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "openai": "^6.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.1",
    "start-server-and-test": "^2.0.8"
  }
}
